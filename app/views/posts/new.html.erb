<% title(@post.parent ? "Reply" : "New Post") %>
<h1><%= yield(:title) %></h1>

<%= render 'form' %>
<% if @post.parent %>
<h2> Post being replied to:</h2>
<%= render :partial => 'post', :object => @post.parent, :locals => { :hide_status_info => true } %>
<% end %>
<%= link_to 'Back to Messages', posts_path %>
