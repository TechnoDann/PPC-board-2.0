<div class="post">
  <% hide_status_info ||= false %>
  <% unless hide_status_info %>
    <% if post.locked %>
      <% flash_message(:info, "This (sub)thread has been locked. No more replies can be added to it.") %>
    <% end %>
    <% if post.reSorted? %>
      <% flash_message(:info, "This post sorts as if it had been posted on #{post.sort_timestamp}, that is #{distance_of_time_in_words(Time.now, post.sort_timestamp)} #{(post.sort_timestamp > Time.now) ? 'from now' : 'ago'}.") %>
     <% end %>
     <% if post.previous_version_id %>
       <% flash_message(:info, "This post has been edited. The previous version is located #{link_to 'here.', post.previous_version}") %>
     <% end %>
     <% if post.next_version_id %>
       <% flash_message(:info, "This post has been superseded by an edit, which is located #{link_to 'here.', post.next_version}") %>
     <% end %>

     <% if post.poofed || post.ancestors.where(:poofed => true).count > 0 %>
       <div class="modal" id="poofModal" role="dialog">
         <div class="modal-dialog" role="document">
           <div class="modal-content">
             <div class="modal-header">
               <button type="button" class="close" data-dismiss="modal">Ã—</button>
               <h3>This thread is poofed!</h3>
             </div>
             <div class="modal-body">
               <p> This post belongs to a thread that has been poofed by a
                 moderator. Poofed threads contain content that is strongly
                 objected to by the community. If you <i>really</i> want to see
                 the thread, click the red button. </p>
             </div>
             <div class="modal-footer">
               <a href="#" class="btn btn-primary" onclick="history.back()" >Go back</a>
               <a href="#" class="btn btn-danger" data-dismiss="modal">See the thread!</a>
             </div>
           </div>
         </div>
       </div>
       <script type="text/javascript">
         $('#poofModal').modal({ backdrop: "static" })
       </script>
    <% end %>
  <% end %>
  <b>Subject:</b> <%= raw(htmlic_title(post.subject)) %> <br />
  <b>Author:</b> 
  <% if post.author == post.user.name %>
    <%= link_to post.author, post.user %>
  <% else %>
    <%= post.author %> (posted by <%= link_to post.user.name, post.user %>)
  <% end %>
  <br />
  <b>Posted on:</b> <%= post.created_at %><br />
  <br />
  <div class="current-post-body">
    <%= raw(markdown(post.body)) %>
  </div>
</div>
