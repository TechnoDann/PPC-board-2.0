<div class="post">
  <% hide_status_info ||= false; flash[:info] = [] %>
  <% unless hide_status_info %>
  <% if post.locked %>
    <% flash_message(:info, "This (sub)thread has been locked. No more replies can be added to it.") %>
  <% end %>
  <% if reSorted? post %>
    <% flash_message(:info, "This post sorts as if it had been posted on #{post.sort_timestamp}, that is #{distance_of_time_in_words(post.created_at, post.sort_timestamp)} #{(post.sort_timestamp > post.created_at) ? 'from now' : 'ago'}.") %>
  <% end %>
  <% if post.previous_version %>
    <% flash_message(:info, "This post has been edited. The previous version is located #{link_to 'here.', post.previous_version}") %>
  <% end %>
  <% if post.next_version %>
    <% flash_message(:info, "This post has been superseded by an edit, which is located #{link_to 'here.', post.next_version}") %>
  <% end %>
  <%= render :partial => 'layouts/information', :locals => { :flash => flash } %>
  <% end %>
  <b>Subject:</b> <%= post.subject %> <br />
  <b>Author:</b> <%= post.author %> <br />
  <b>Posted on:</b> <%= post.created_at %><br />
  <b>Poofed:</b> <%= post.poofed %> <br />
  <br />
  <div class="post-body">
    <%= post.body %>
  </div>
</div>
