<% title("Search results for \"#{@query}\"") %>
<h1><%= yield(:title) %></h1>
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
<% @posts.each do |post| %>
  <div class="search-result post thread">
    <%= render :partial => 'post_subject', :object => post %>
    <br />
    <%= raw(markdown(post.pg_search_highlight)) %>
  </div>
<% end %>
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
