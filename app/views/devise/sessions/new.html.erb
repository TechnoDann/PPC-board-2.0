<% title("Log in") %>
<h2><%= yield :title %></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :horizontal_form, html: {class: "form-horizontal"}) do |f| %>
  <div class="row">
    <div class="form-inputs">
      <%= f.input :name, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-actions col-sm-offset-2">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
