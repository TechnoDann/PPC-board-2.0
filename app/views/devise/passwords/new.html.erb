<% title("Forgot your password?") %>
<h2><%= yield :title %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), wrapper: :horizontal_form, html: { method: :post, class: "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true %>
      <%= f.input :email, required: true %>
    </div>
  </div>

  <div class="row">
    <div class="form-actions col-sm-offset-2">
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
