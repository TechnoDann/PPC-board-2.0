<% title("Sign up") %>
<h2><%= yield :title %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :horizontal_form, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-sm-9 col-sm-offset-1">
      <p>All of these values can be changed later</p>
    </div>
  </div>

  <div class="row">
    <div class="form-inputs">
      <%= f.input :name,
                  required: true,
                  autofocus: true %>
      <%= f.input :email,
                  required: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  nput_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :show_email, as: :boolean, wrapper: :board_vertical_boolean,
          hint: "Check if you want your email visible to logged-in Boarders." %>
      <%= f.input :antispam,
                  required: true,
                  as: :string,
                  label: "Anti-spam",
                  inline_label: "Anti-spam",
                  hint: "The name of this community (3 letters)",
                  input_html: {maxlength: 3} %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-9 col-sm-offset-1">
      <p>If you're interested, you can read our <%= link_to 'data collection information', '/data_collection' %>.
      This outlines how we'll use the information provided in this form to run the Board.</p>
    </div>
  </div>

  <div class="row">
    <div class="form-actions col-sm-offset-2">
      <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
